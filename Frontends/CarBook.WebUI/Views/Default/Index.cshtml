@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadUILayoutComponentPartial")

<body>

    @await Component.InvokeAsync("_NavbarUILayoutComponentPartial")

    @await Component.InvokeAsync("_DefaultCoverUILayoutComponentPartial")

    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post"  class="request-form ftco-animate bg-dark-grey">
                                <h2>Şimdi Aracınızı Kiralayın</h2>
                                <div class="form-group">
                                    <label for="" class="label">Alınacak Lokasyon</label>
                                    @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", @id = "drop" ,@name="locationId" })
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alınmak İstenen Tarih</label>
                                        <input type="text" class="form-control" name="book_pick_date" id="book_pick_date" placeholder="Date">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">İade Tarihi</label>
                                        <input type="text" class="form-control" name="book_off_date" id="book_off_date" placeholder="Date">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Alış Saati</label>
                                    <input type="text" class="form-control" name="time_pick" id="time_pick" placeholder="Time">
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">İade Saat</label>
                                    <input type="text" class="form-control" name="time_off" id="time_pick" placeholder="Time">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-secondary py-3 px-4">Uygun Araçları Listele</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Kolay Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><i class="fa-solid fa-route"></i></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak İstediğin Konumu Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><i class="fa-solid fa-handshake"></i></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En Uygun Araçları Gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><i class="fa-solid fa-car"></i></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamayı Tamamla, Hepsi Bu!</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="#" class="btn btn-secondary py-3 px-4">Reserve Your Perfect Car</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
        <title>Page Title</title>
        <style>
            .bg-dark-grey {
                background-color: #333333; /* Hafif griye yakın siyah */
            }
        </style>
        <style>
            i {
                font-size: 50px;
                color: black;
            }
        </style>
        <style>
            #drop option {
                color: black;
            }

        </style>
    </head>


    @await Component.InvokeAsync("_DefaultLast5CarsWithBrandsComponentPartial")
    
    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

    @await Component.InvokeAsync("_BecomeADriverComponentPartial")

    @await Component.InvokeAsync("_TestimonialComponentPartial")

    @await Component.InvokeAsync("_GetLast3BlogsWithAuthorListComponentPartial")

    @await Component.InvokeAsync("_DefaultStatisticsComponentPartial")

    @await Component.InvokeAsync("_FooterUILayoutComponentPartial")

    @await Component.InvokeAsync("_ScriptUILayoutComponentPartial")

</body>
</html>

