@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Anasayfa Hakkımızda Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Anasayfanın ve Hakkımızda sayfasının "hakkım" alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğünün bozulmaması adına lütfen sadece bir adet veri girişi yapınız. Aksi durumlarda tema bütünlüğü bozulacaktır.
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>Başlık</th>
                                            <th>Açıklama</th>
                                            <th>Görsel</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.title</td>
                                                <td>@item.description</td>
                                                <td>@item.imageUrl</td>
                                                <td><a href="/Admin/About/RemoveAbout/@item.aboutId" class="btn btn-rounded btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/About/UpdateAbout/@item.aboutId" class="btn btn-rounded btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <p class="mb-0">Herhangi bir kayıt bulunamadı.</p>
                                </div>
                            }
                            <a href="/Admin/About/CreateAbout/" class="btn btn-rounded btn-outline-primary">Yeni Hakkımda Alanı Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>











